{% extends 'leiaute.twig' %}
{% block conteudo %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div>
                    {% if post %}
                    <form action="{{ app.url_generator.generate('postAtualizacao', {id: post.seq_post}) }}" method="post">
                        <fieldset>
                            <legend>Cadastre o post:</legend>
                                <label for="titulo">Título:</label><br />
                                <input type="text" id="titulo" type="text" name="desTitulo" value ="{{ post.des_titulo }}"><br />
                                <label for="conteudo">Conteúdo:</label><br>
                                <textarea id="conteudo" name="txtConteudo">{{ post.txt_conteudo }}</textarea><br />
                                <label for="autor">Autor:</label><br />
                                <input type="text" id="autor" type="text" name="nomAutor" value ="{{ post.nom_autor }}"> <br />
                                <label for="data">Data:</label><br />
                                <input type="date" id="data" name="datPost" value ="{{ post.dat_publicacao|date('Y-m-d', false) }}"></input>
                        </fieldset>
                        <br />
                        <input type="submit" value="Enviar">
                        <input type="reset" value="Limpar">
                    </form>
                    {% else %}
                    <form action="{{ app.url_generator.generate('postGravacao') }}" method="post">
                        <fieldset>
                            <legend>Cadastre o post:</legend>
                                <label for="titulo">Título:</label><br />
                                <input type="text" id="titulo" type="text" name="desTitulo"><br />
                                <label for="conteudo">Conteúdo:</label><br>
                                <textarea id="conteudo" name="txtConteudo"></textarea><br />
                                <label for="autor">Autor:</label><br />
                                <input type="text" id="autor" type="text" name="nomAutor"> <br />
                                <label for="data">Data:</label><br />
                                <input type="date" id="data" name="datPost"></input>
                        </fieldset>
                        <br />
                        <input type="submit" value="Enviar">
                        <input type="reset" value="Limpar">
                    </form>
                    {% endif %}
                </div>
                <hr>
                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <a href="{{ app.url_generator.generate('postLista') }}">Todos os posts</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}


