{% extends 'leiaute.twig' %}
{% block conteudo %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div>
                    <form action="{{ path('admin_autenticar') }}" method="post">
                        {% if error %}
                            <div class="alert alert-error">{{ error }}</div>
                        {% endif %}
                        <fieldset>
                            <legend>Acesse:</legend>
                                <label for="usuario">Usuário:</label><br />
                                <input type="text" id="usuario" placeholder="Usuário" name="_username" value="{{ last_username }}" /><br />
                                <label for="senha">Senha:</label><br />
                                <input type="password" id="senha" name="_password" placeholder="Senha"/>
                        </fieldset>
                        <br />
                        <input type="submit" value="Enviar">
                        <input type="reset" value="Limpar">
                    </form>
                </div>
                <hr>
                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <a href="{{ app.url_generator.generate('inicio') }}">Início</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
